<%= form_for([@project, @ticket]) do |f| %>
  
  <% if @ticket.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@ticket.errors.count, "error") %>
      </h2>
      <ul>
        <% @ticket.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
 
  <p>
    <%= f.label :priority %><br>
    <%= f.number_field :priority %>
  </p>
  
  <p>
    <%= f.label :estimation %><br>
    <%= f.number_field :estimation %>
  </p>
  
  <p>
    <%= f.select :status, options_for_select(@statuses.map {|k, v| [k, k]}) %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
  
<% end %>